<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Thème principal pour salle de sport - Orange énergique -->
    <Color x:Key="Primary">#FF6B35</Color>
    <Color x:Key="PrimaryDark">#E55A2B</Color>
    <Color x:Key="PrimaryLight">#FF8A5B</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    
    <!-- Couleurs secondaires - Bleu professionnel -->
    <Color x:Key="Secondary">#2E86AB</Color>
    <Color x:Key="SecondaryLight">#A23B72</Color>
    <Color x:Key="SecondaryDarkText">#F18F01</Color>
    
    <!-- Couleur tertiaire - Vert succès -->
    <Color x:Key="Tertiary">#4CAF50</Color>
    <Color x:Key="TertiaryLight">#81C784</Color>
    
    <!-- Couleurs d'accent -->
    <Color x:Key="Accent">#F18F01</Color>
    <Color x:Key="AccentLight">#FFB347</Color>
    
    <!-- Couleurs de base -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#C73E1D</Color>
    <Color x:Key="MidnightBlue">#0B1426</Color>
    <Color x:Key="OffBlack">#1a1a1a</Color>
    
    <!-- Couleurs de danger et succès -->
    <Color x:Key="Danger">#F44336</Color>
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Palette de gris modernisée -->
    <Color x:Key="Gray50">#FAFAFA</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#0F0F0F</Color>

    <!-- Couleurs de fond -->
    <Color x:Key="BackgroundLight">#FAFAFA</Color>
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#1E1E1E</Color>
    
    <!-- Couleurs de texte améliorées pour une meilleure lisibilité -->
    <Color x:Key="TextPrimary">#616161</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    <Color x:Key="TextOnSecondary">#FFFFFF</Color>
    
    <!-- Couleurs de texte adaptatives pour le thème sombre -->
    <Color x:Key="TextPrimaryDark">#E0E0E0</Color>
    <Color x:Key="TextSecondaryDark">#BDBDBD</Color>

    <!-- Brushes principales -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLight}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <!-- Brushes de gris -->
    <SolidColorBrush x:Key="Gray50Brush" Color="{StaticResource Gray50}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    
    <!-- Brushes fonctionnelles -->
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>

    <!-- Gradients pour plus d'attrait visuel -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Secondary}" Offset="0"/>
        <GradientStop Color="{StaticResource SecondaryLight}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Accent}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentLight}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>