<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagement.Presentation.MobileApp.MainPage">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label x:Name="QrCodeLabel" Text="Votre QR Code" FontAttributes="Bold" HorizontalOptions="Center" />

        <WebView x:Name="QrCodeWebView"
                 HeightRequest="350"
                 WidthRequest="350"
                 HorizontalOptions="Center" />
        
        <Button 
            Text="Mes abonnements" 
            Clicked="OnSubscriptionClicked"
            BackgroundColor="DodgerBlue"
            TextColor="White"
            FontSize="12"
            HeightRequest="32"
            Padding="10,4"
            CornerRadius="6"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Profil" Clicked="OnProfileClicked"/>
        <ToolbarItem Text="Se déconnecter" Clicked="OnLogoutClicked"/>
    </ContentPage.ToolbarItems>

</ContentPage>
