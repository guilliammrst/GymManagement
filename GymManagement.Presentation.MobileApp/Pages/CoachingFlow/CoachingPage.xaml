            </Frame>

            <!-- Liste des plans de coaching -->
            <CollectionView Grid.Row="2" 
                            x:Name="coachingPlansCollectionView"
                            SelectionMode="Single"
                            SelectionChanged="OnCoachingPlanSelected">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="16"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 16"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                StrokeThickness="1"
                                Padding="0">
                            
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="Stroke" Value="{StaticResource Accent}"/>
                                    <Setter Property="StrokeThickness" Value="2"/>
                                </DataTrigger>
                            </Border.Triggers>

                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Gray400}"
                                        Offset="0,2"
                                        Radius="8"
                                        Opacity="0.1"/>
                            </Border.Shadow>

                            <Grid Padding="20" RowSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header avec icÃ´ne et nom -->
                                <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="16">
                                    <Border BackgroundColor="{StaticResource Accent}" 
                                            StrokeShape="RoundRectangle 25"
                                            WidthRequest="50" 
                                            HeightRequest="50">
                                        <Label Text="ðŸŽ¯" 
                                               FontSize="24" 
                                               HorizontalOptions="Center" 
                                               VerticalOptions="Center"/>
                                    </Border>
                                    <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                        <Label Text="{Binding Description}" 
                                               Style="{StaticResource TitleSmall}"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource TextPrimaryDark}}"/>
                                        <Label Text="Programme d'entraÃ®nement personnalisÃ©" 
                                               Style="{StaticResource BodySmall}"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource TextSecondaryDark}}"/>
                                    </StackLayout>
                                </StackLayout>

                                <!-- Prix avec mise en valeur -->
                                <StackLayout Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                    <Label Text="ðŸ’°" FontSize="20"/>
                                    <Label Text="{Binding Price, StringFormat='{0:C}'}" 
                                           Style="{StaticResource TitleMedium}"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Accent}"/>
                                    <Label Text="par session" 
                                           Style="{StaticResource BodyMedium}"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource TextSecondaryDark}}"
                                           VerticalOptions="End"/>
                                </StackLayout>

                                <!-- Avantages du coaching -->
                                <StackLayout Grid.Row="2" Spacing="6">
                                    <StackLayout Orientation="Horizontal" Spacing="8">
                                        <Label Text="âœ“" FontSize="16" TextColor="{StaticResource Success}"/>
                                        <Label Text="Coaching personnalisÃ©" 
                                               Style="{StaticResource BodySmall}"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource TextSecondaryDark}}"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal" Spacing="8">
                                        <Label Text="âœ“" FontSize="16" TextColor="{StaticResource Success}"/>
                                        <Label Text="Suivi des progrÃ¨s" 
                                               Style="{StaticResource BodySmall}"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource TextSecondaryDark}}"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal" Spacing="8">
                                        <Label Text="âœ“" FontSize="16" TextColor="{StaticResource Success}"/>
                                        <Label Text="Support professionnel" 
                                               Style="{StaticResource BodySmall}"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource TextSecondaryDark}}"/>
                                    </StackLayout>
                                </StackLayout>

                                <!-- Indicateur de sÃ©lection -->
                                <Border Grid.Row="3" 
                                        BackgroundColor="{StaticResource Accent}"
                                        StrokeShape="RoundRectangle 8"
                                        Padding="12,6"
                                        IsVisible="{Binding IsSelected}"
                                        Margin="0,8,0,0">
                                    <Label Text="âœ“ Programme sÃ©lectionnÃ©" 
                                           Style="{StaticResource BodyMedium}"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bouton Continuer -->
            <Button Grid.Row="3"
                    x:Name="continueButton"
                    Text="ðŸš€ CONTINUER"
                    IsEnabled="False"
                    Clicked="OnContinueClicked"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,16,0,0"/>

        </Grid>
    </ScrollView>
</ContentPage>
