<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagement.Presentation.MobileApp.Pages.RegisterPage"
             Title="Inscription">

	<ScrollView>
		<StackLayout Padding="30" Spacing="15">

			<Label Text="Inscription" FontSize="24" HorizontalOptions="Center"/>

			<Entry x:Name="nameEntry" Placeholder="Nom"/>
			<Entry x:Name="surnameEntry" Placeholder="Prénom"/>
			<DatePicker x:Name="birthdatePicker" Date="{x:Static sys:DateTime.Today}" />
			<Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
			<Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True"/>
			<Entry x:Name="phoneEntry" Placeholder="Téléphone"/>

			<Picker x:Name="genderPicker" Title="Genre"/>
			<Picker x:Name="countryPicker" Title="Pays"/>

			<Entry x:Name="cityEntry" Placeholder="Ville"/>
			<Entry x:Name="streetEntry" Placeholder="Rue"/>
			<Entry x:Name="postalCodeEntry" Placeholder="Code postal"/>
			<Entry x:Name="numberEntry" Placeholder="Numéro"/>
            
            <Button 
				Text="Créer mon compte" 
				Clicked="OnRegisterClicked" 
				BackgroundColor="LightGray" 
				TextColor="Black"/>

			<Button 
				Text="Se connecter" 
				Clicked="OnGoToLoginClicked" 
				BackgroundColor="DodgerBlue" 
				TextColor="White"/>

        </StackLayout>
	</ScrollView>

</ContentPage>
